<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242536"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#1F1F2F"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_log_tongji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:text="169"
                android:textColor="#6EB92D"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextClock
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:format12Hour="yyyy-MM-dd HH:mm:ss"
                android:format24Hour="yyyy-MM-dd HH:mm:ss"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_item_nav_close" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机号"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_background_edit_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_machineNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="25dp"
                android:paddingBottom="7dp"
                android:hint="输入机号"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_machineNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="21dp"
                android:paddingTop="15dp"
                android:paddingEnd="21dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_item_pull_down_arrow" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="日期"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_background_edit_gray"
            android:drawableEnd="@drawable/ic_item_pull_down_arrow"
            android:drawablePadding="47dp"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:paddingRight="21dp"
            android:paddingBottom="6dp"
            android:hint="选择日期"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="品种"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/shape_background_edit_gray"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                android:paddingEnd="25dp"
                android:paddingBottom="7dp"
                android:hint="输入品种"
                android:textColor="@color/gray"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_variety"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="21dp"
                android:paddingTop="15dp"
                android:paddingEnd="21dp"
                android:paddingBottom="15dp"
                android:src="@drawable/ic_item_pull_down_arrow" />
        </LinearLayout>


        <ImageView
            android:id="@+id/im_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_background_edit_gray"
            android:padding="10dp"
            android:src="@drawable/ic_item_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_derived_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4ED966"
            android:paddingLeft="12dp"
            android:paddingTop="7dp"
            android:paddingRight="12dp"
            android:paddingBottom="7dp"
            android:text="导出U盘"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_statistics_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/bg_radius0_gray_color_979797" />

</LinearLayout>